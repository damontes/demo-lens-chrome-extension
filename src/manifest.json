{
  "name": "Zendesk DemoLens (z3n demo accounts only)",
  "version": "0.0.17",
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_title": "DemoLens"
  },
  "side_panel": {
    "default_path": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zendesk.com/explore/dashboard/*",
        "https://*.zendesk.com/explore/studio",
        "https://*.cloud.looker.com/*"
      ],
      "js": ["src/content/explore.ts"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*.zendesk.com/admin/*"],
      "js": ["src/content/admin.ts"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.zendesk.com/wfm/v2/*"],
      "js": ["src/content/wfm.ts"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.ultimate.ai/*", "https://*.cloud.looker.com/*"],
      "js": ["src/content/ai_agents.ts"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["scripting", "storage", "unlimitedStorage", "sidePanel"],
  "host_permissions": ["<all_urls>"]
}
