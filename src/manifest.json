{
  "name": "Zendesk DemoLens (z3n demo accounts only)",
  "version": "0.0.11",
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_title": "DemoLens"
  },
  "side_panel": {
    "default_path": "src/popup.html"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["https://*.zendesk.com/explore/dashboard/*", "https://*.zendesk.com/explore/studio"],
      "js": ["src/content_explore.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.zendesk.com/admin/*"],
      "js": ["src/content_admin.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.zendesk.com/wfm/v2/*"],
      "js": ["src/content_wfm.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js", "src/demo-copilot-inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["scripting", "storage", "unlimitedStorage", "sidePanel"],
  "host_permissions": ["<all_urls>"]
}
